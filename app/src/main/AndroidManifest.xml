<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.bishoybasily.worker">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gmail.bishoybasily.worker.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gmail.bishoybasily.worker.BottomActivity"
            android:label="@string/title_activity_bottom" />
        <activity
            android:name="com.gmail.bishoybasily.worker.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName="com.gmail.bishoybasily.worker.MainActivity"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gmail.bishoybasily.worker.MainActivity" />
        </activity>

        <service
            android:name="com.gmail.bishoybasily.worker.Replies"
            android:exported="false" />
        <service
            android:name="com.gmail.bishoybasily.worker.Visits"
            android:exported="false" />
    </application>

</manifest>